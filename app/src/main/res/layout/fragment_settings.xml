<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/version"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/xlarge"
            android:layout_marginBottom="@dimen/large"
            android:textSize="@dimen/textLarge"
            android:text="@string/author"
            android:textColor="@color/colorOnPrimary"
            />

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/syncAll"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/author"
            android:layout_marginTop="@dimen/large"
            android:layout_marginBottom="@dimen/large"
            android:textSize="@dimen/textLarge"
            android:textColor="@color/colorOnPrimary"
            />

        <Button
            android:id="@+id/syncAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Button"
            app:layout_constraintBottom_toTopOf="@+id/autoSync"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/version"
            android:layout_marginTop="@dimen/large"
            android:layout_marginBottom="@dimen/large"
            android:text="@string/downloadData"
            />

        <Switch
            android:id="@+id/autoSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/API"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/syncAll"
            android:layout_marginTop="@dimen/large"
            android:layout_marginBottom="@dimen/large"
            tools:ignore="UseSwitchCompatOrMaterialXml"
            android:text="@string/autoSync"
            android:textSize="@dimen/textLarge"
            />

        <Button
            android:id="@+id/API"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Button"
            app:layout_constraintEnd_toEndOf="@+id/syncAll"
            app:layout_constraintStart_toStartOf="@+id/syncAll"
            app:layout_constraintTop_toBottomOf="@+id/autoSync"
            android:layout_marginTop="@dimen/large"
            android:layout_marginBottom="@dimen/large"
            android:text="@string/visitAPI"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
